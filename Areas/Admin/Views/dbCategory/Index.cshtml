        @Html.DisplayFor(modelItem => item.Deleted)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShowOnHomePage)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.CreatedOnUtc)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UpdateOnUtc)
    </td>
    <td>
        @Html.ActionLink("sửa", "Edit", new { ID = item.ID }) |
        @Html.ActionLink("xem", "Details", new { ID = item.ID }) |
        @Html.ActionLink("xóa", "Delete", new { ID = item.ID })
    </td>
</tr>}

    </table>
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) đến @Model.PageCount
    @Html.PagedListPager(Model, Page => Url.Action("Index",
            new { Page, CurrentFilter = ViewBag.CurrentFilter }))
</div>